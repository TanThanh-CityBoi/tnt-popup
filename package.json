{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "huskyinit": "npx husky add .husky/pre-commit \"yarn lint:staged\"",
    "lint:staged": "lint-staged",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\" --fix"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "lerna": "^5.6.2",
    "typescript": "^4.3.5"
  }
}
